<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "物件名" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rent, "賃料" %>
    <%= form.number_field :rent %>
  </div>

  <div class="field">
    <%= form.label :address, "住所" %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :old, "築年数" %>
    <%= form.number_field :old %>
  </div>

  <div class="field">
    <%= form.label :remark, "備考" %>
    <%= form.text_area :remark %>
  </div>


  <% n = 0 %>
  <%= form.fields_for :stations do |form| %>
    <p>--------------------------------------------------</p>
    <p>最寄り駅（<%= n += 1 %>）</p>
      <div class="field">
        <%= form.label :name, "駅名" %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :line, "路線名" %>
        <%= form.text_field :line %>
      </div>

      <div class="field">
        <%= form.label :time, "徒歩分数" %>
        <%= form.number_field :time %>
      </div>
    <% end %>



  <div class="actions">
    <%= form.submit "登録する" %>
  </div>

<% end %>
